@{
    var antiforgeryToken = Html.AntiForgeryToken().ToString();
}
<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Add Employee</title>
    <style>
        body {
            font-family: Arial, sans-serif;
            background-color: #f2f2f2;
            margin: 0;
            padding: 20px;
        }

        .container {
            max-width: 600px;
            margin: auto;
            background-color: #fff;
            padding: 20px;
            border-radius: 8px;
            box-shadow: 0 0 10px rgba(0,0,0,0.1);
        }

        h2 {
            text-align: center;
            margin-bottom: 20px;
        }

        .form-group {
            margin-bottom: 15px;
        }

        label {
            font-weight: bold;
            display: block;
            margin-bottom: 5px;
        }

        input[type="radio"], input[type="checkbox"] {
            width: auto;
            margin-right: 10px;
            vertical-align: middle;
        }

        .radio-inline label {
            display: inline-block;
            margin-right: 15px;
        }

        button {
            padding: 12px 20px;
            font-size: 16px;
            background-color: #4CAF50;
            color: white;
            border: none;
            border-radius: 4px;
            cursor: pointer;
            display: block;
            margin: auto;
            margin-top: 10px;
        }

            button:hover {
                background-color: #45a049;
            }
    </style>
    <script src="https://code.jquery.com/jquery-3.7.1.min.js" integrity="sha256-/JqT3SQfawRcv/BIHPThkBvs0OEvtFFmqPF/lYI/Cxo=" crossorigin="anonymous"></script>
</head>
<body>
    <div class="container">
        <h2>Add Employee</h2>

        <form id="employeeForm">
            @Html.AntiForgeryToken()

            <div class="form-group">
                <label for="EmpName">Employee Name:</label>
                <input type="text" id="EmpName" name="EmpName" required autocomplete="off">
            </div>

            <div class="form-group">
                <label for="Age">Age:</label>
                <input type="number" id="Age" name="Age" required autocomplete="off">
            </div>

            <div class="form-group">
                <label>Gender:</label><br>
                <div class="radio-inline">
                    <input type="radio" id="Male" name="Gender" value="Male" required autocomplete="off">
                    <label for="Male">Male</label>
                </div>
                <div class="radio-inline">
                    <input type="radio" id="Female" name="Gender" value="Female" required autocomplete="off">
                    <label for="Female">Female</label>
                </div>
                <div class="radio-inline">
                    <input type="radio" id="Other" name="Gender" value="Other" required autocomplete="off">
                    <label for="Other">Other</label>
                </div>
            </div>

            <div class="form-group">
                <label for="Designation">Designation:</label>
                <input type="text" id="Designation" name="Designation" autocomplete="off">
            </div>

            <div class="form-group">
                <label for="Country">Country:</label>
                <input type="text" id="Country" name="Country" autocomplete="off">
            </div>

            <div class="form-group">
                <label for="State">State:</label>
                <input type="text" id="State" name="State" autocomplete="off">
            </div>

            <div class="form-group">
                <label for="City">City:</label>
                <input type="text" id="City" name="City" autocomplete="off">
            </div>

            <div class="form-group">
                <label for="EmailId">Email:</label>
                <input type="email" id="EmailId" name="EmailId" autocomplete="off">
            </div>

            <div class="form-group">
                <label for="Pincode">Pincode:</label>
                <input type="text" id="Pincode" name="Pincode" autocomplete="off">
            </div>

            <button type="submit">Submit</button>
        </form>

        <div id="result"></div>
        <div class="employee-list"></div>
    </div>

    <script>
        $(document).ready(function () {
            $('#employeeForm').on('submit', function (event) {
                event.preventDefault();

                const form = $('#employeeForm');
                const formData = form.serialize();

                const token = $('input[name="__RequestVerificationToken"]').val();

                $.ajax({
                    type: 'POST',
                    url: '/Employee/Create', // Ensure this matches your route
                    data: formData,
                    headers: {
                        'RequestVerificationToken': token
                    },
                    success: function (response) {
                        $('#result').text(response.message);
                        form[0].reset();
                        addElement();
                    },
                    error: function (xhr, status, error) {
                        $('#result').text('Error adding employee.');
                        console.error('Error status:', status);
                        console.error('Error details:', error);
                        console.error('Error response:', xhr.responseText);
                    }
                });
            });

            function addElement() {
                var name = $('#EmpName').val();
                var designation = $('#Designation').val();
                var email = $('#EmailId').val();
                var gender = $('input[name="Gender"]:checked').val();
                var source = gender === 'Male' ? '/Images/cardjs/rr.jpg' : '/Images/cardjs/female.jpg';

                var employeedetails = `
                            <style>
                                .card {
                                    display: flex;
                                    flex-direction: column;
                                    justify-content: center;
                                    align-items: center;
                                    border: 1px solid #ddd;
                                    border-radius: 8px;
                                    overflow: hidden;
                                    box-shadow: 0 4px 8px rgba(0, 0, 0, 0.1);
                                    margin: 20px 0;
                                    background-color: #fff;
                                    font-family: Arial, sans-serif;
                                }

                                .card img {
                                    max-width: 100px;
                                    height: auto;
                                    object-fit: cover;
                                    border-radius: 8px 0 0 8px;
                                }

                                .emp-details {
                                    padding: 20px;
                                    flex: 1;
                                }

                                .emp-name {
                                    font-size: 20px;
                                    font-weight: bold;
                                    color: #333;
                                    margin-bottom: 5px;
                                }

                                .emp-designation {
                                    font-size: 16px;
                                    color: #777;
                                    margin-bottom: 10px;
                                }

                                .emp-role {
                                    font-size: 14px;
                                    color: #555;
                                    margin-bottom: 15px;
                                }

                                .div-remove-card {
                                    padding-right: 15px;
                                }

                                .div-remove-card button {
                                    background-color: transparent;
                                    border: none;
                                    cursor: pointer;
                                    padding: 0;
                                }

                                .div-remove-card button img {
                                    width: 50px;
                                    height: 50px;
                                }
                            </style>

                            <div class="card">
                                <img src="${source}" alt="Employee Image">
                                <div class="emp-details">
                                    <div class="emp-name">${name}</div>
                                    <div class="emp-designation"><i>${designation}</i></div>
                                    <div class="emp-role">${email}</div>
                                </div>
                                <div class="div-remove-card">
                                    <button class="delete-btn">
                                        <img src="/Images/cardjs/delete.png" alt="Delete Button">
                                    </button>
                                </div>
                            </div>`;

                $('.employee-list').append(employeedetails);

                $('.employee-list').on('click', '.delete-btn', function () {
                    $(this).closest('.card').remove();
                });
            }
        });
    </script>
</body>
</html>
