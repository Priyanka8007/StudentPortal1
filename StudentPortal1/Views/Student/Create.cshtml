@model StudentPortal1.Models.Dtos.AddStudentDto

<h2>Create Student</h2>

<form id="studentForm" asp-action="Create" method="post">
    <div class="form-group">
        <label asp-for="Name"></label>
        <input asp-for="Name" class="form-control" id="nameInput" />
        <span id="nameHistory" class="history"></span>
        <span asp-validation-for="Name" class="text-danger"></span>
    </div>
    <div class="form-group">
        <label asp-for="Age"></label>
        <input asp-for="Age" class="form-control" id="ageInput" />
        <span id="ageHistory" class="history"></span>
        <span asp-validation-for="Age" class="text-danger"></span>
    </div>
    <button type="submit" class="btn btn-primary">Create</button>
</form>



